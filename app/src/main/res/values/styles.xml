<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDialog" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="PointAddTextStyle">
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:textColorHint">#acaaae</item>
        <item name="android:background">#f1f1f1</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:layout_width">245dp</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:layout_marginTop">13dp</item>
    </style>

    <style name="PointRadioStyle">
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">78dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/point_bg_selector</item>
        <item name="android:drawablePadding">18dp</item>
    </style>

    <style name="PointGridItemNameStyle">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PointGridItemStyle">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">#8d9199</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>